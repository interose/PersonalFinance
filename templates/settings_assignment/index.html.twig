{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('settingsAssignment') }}

    <link rel="stylesheet" href="{{ asset('build/ext/theme-crisp-all.css') }}" />
{% endblock %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>{% trans %}Settings{% endtrans %}</h1>

        <div class="pull-right content-header-tools">
            <a href="{{ path('settings_assignment_new') }}" class="btn btn-success btn-sm"><i class="fas fa-plus-circle"></i> {% trans %}Add rule{% endtrans %}</a>
        </div>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-custom">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-tools"></i> {% trans %}Rules{% endtrans %}</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div id="ext-container"></div>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include 'parts/extJsAssets.html.twig' %}
    {{ encore_entry_script_tags('settingsAssignment') }}
{% endblock %}
