{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('chart') }}
    {{ parent() }}
{% endblock %}


{% block body %}
    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-custom">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-chart-line"></i> {% trans %}Chart{% endtrans %}</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                {{ form_widget(form.category, {'attr': {'class': 'form-control form-control-sm select2'}}) }}
                            </div>
                            <div class="col-2">
                                {{ form_widget(form.grouping, {'attr': {'class': 'form-control form-control-sm select2'}}) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div id="chart" height="500"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('chart') }}
{% endblock %}
